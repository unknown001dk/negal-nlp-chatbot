<!-- views/index.ejs -->
<html>
<head>
    <title>Legal Chatbot</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
    <h1><%= __("greetings.welcome", { locale: locale }) %></h1>
    <p><%= __("greetings.intro", { locale: locale }) %></p>
    <form action="/query" method="POST">
        <input type="text" name="query" placeholder="<%= __("Enter your query...", { locale: locale }) %>">
        <button type="submit"><%= __("Submit", { locale: locale }) %></button>
    </form>
    <div id="response"></div>
</body>
</html>
